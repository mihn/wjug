doctype html
html(lang='en', ng-app='app')
    head
        meta(charset='utf-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name='viewport', content='width=device-width', initial-scale='2.0')
        meta(name='description', content='Warsaw Java User Group')
        title(ng-bind-template='Warsaw Java User Group')
        link(rel='stylesheet', href='css/app.css')
        //-script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
        //if lte IE 7
            script(src='http://cdnjs.cloudflare.com/ajax/libs/json2/20110223/json2.js')
        //if lte IE 8
            script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
        script.
            window.brunch = window.brunch || {};
            window.brunch['auto-reload'] = {
                enabled: true
            };
        script(src='js/vendor.js')
        script(src='js/app.js')
        script.
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-40251219-1']);
            _gaq.push(['_trackPageview']);
            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
    body(ng-controller='AppCtrl')
        .top-menu
            .top-menu-inner
                a(href='#/home').brand wjug
                .nav(ng-include="'partials/nav.html'")
        .wrapper
            .main-content
                div(ng-switch="subview").subview
                    div(ng-switch-when="loading", ui-animate)
                        p loading...
                    div(ng-switch-when="page1", ng-include=" 'partials/partial1.html' ", ui-animate)
                    div(ng-switch-when="page2", ng-include=" 'partials/page2.html' ", ui-animate)
                    div(ng-switch-when="jcp", ng-include=" 'partials/jcp.html' ", ui-animate)
                    div(ng-switch-when="library", ng-include=" 'partials/library.html' ", ui-animate)
                    div(ng-switch-when="by-you", ng-include=" 'partials/by-you.html' ", ui-animate)
                    - for (var meeting_id = 1; meeting_id <= 134; meeting_id++)
                       div(ng-switch-when="meeting" + meeting_id, ng-include!="'partials/meetings/".concat(meeting_id, ".html'"), ui-animate)
            .push

        .footer
            .container(ng-include=" 'partials/footer.html' ")
